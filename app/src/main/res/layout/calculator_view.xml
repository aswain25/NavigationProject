<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.calculator.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        android:paddingEnd="10dp"
        android:paddingTop="50dp"/>
    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:rowCount="5"
        android:columnCount="4"
        android:padding="10dp">
        <Button
            android:id="@+id/ce"
            android:text="CE"
            android:onClick="cClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/c"
            android:text="C"
            android:layout_toEndOf="@id/ce"
            android:onClick="cClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/bs"
            android:text="←"
            android:layout_toEndOf="@id/c"
            android:onClick="bsClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/div"
            android:text="÷"
            android:layout_toEndOf="@id/bs"
            android:onClick="operatorClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b7"
            android:text="7"
            android:layout_below="@id/c"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b8"
            android:text="8"
            android:layout_toEndOf="@id/b7"
            android:layout_below="@id/c"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b9"
            android:text="9"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/mul"
            android:text="✕"
            android:layout_toEndOf="@id/b9"
            android:layout_below="@id/div"
            android:onClick="operatorClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b4"
            android:text="4"
            android:layout_below="@id/b7"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b5"
            android:text="5"
            android:layout_toEndOf="@+id/b4"
            android:layout_below="@id/b8"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b6"
            android:text="6"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/min"
            android:text="-"
            android:layout_toEndOf="@+id/b6"
            android:layout_below="@id/mul"
            android:onClick="operatorClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b1"
            android:text="1"
            android:layout_below="@id/b4"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b2"
            android:text="2"
            android:layout_toEndOf="@+id/b1"
            android:layout_below="@id/b5"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/b3"
            android:text="3"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/plu"
            android:text="+"
            android:layout_toEndOf="@+id/b3"
            android:layout_below="@id/min"
            android:onClick="operatorClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/neg"
            android:text="+/-"
            android:layout_below="@id/b1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="negateClicked"/>
        <Button
            android:id="@+id/b0"
            android:text="0"
            android:layout_toEndOf="@+id/neg"
            android:layout_below="@id/b2"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/dec"
            android:text="."
            android:layout_toEndOf="@+id/b0"
            android:layout_below="@id/b3"
            android:onClick="numberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/eq"
            android:text="="
            android:layout_toEndOf="@+id/dec"
            android:layout_below="@id/plu"
            android:onClick="equalsClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
    </GridLayout>

</LinearLayout>
